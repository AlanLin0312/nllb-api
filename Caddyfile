{
	order cache before rewrite
	cache
}

:{$APP_PORT} {
	cache {
		allowed_http_verbs GET POST
		ttl 24h
		timeout {
			backend {$CACHE_TIMEOUT}
		}
		badger {
			configuration {
				ValueThreshold 16777216
				ValueLogFileSize 268435456
			}
		}
	}

	handle_path /api/* {
		reverse_proxy http://localhost:{$SERVER_PORT}
	}
}
